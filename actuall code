    â•‘                                  â•‘
    â•‘  {question_text.ljust(32)}â•‘
    â•‘                                  â•‘
    """, end="")

def display_options(options):
    for option in options:
        print(f"    â•‘  {option.ljust(32)}â•‘")
    print("""
    â•‘                                  â•‘
    â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    """)

def run_quiz():
    questions = [
        {
            "question": "What is the capital of France?",
            "options": ["a) London", "b) Paris", "c) Berlin", "d) Madrid"],
            "answer": "b"
        },
        {
            "question": "Which planet is known as the Red Planet?",
            "options": ["a) Venus", "b) Jupiter", "c) Mars", "d) Saturn"],
            "answer": "c"
        },
        {
            "question": "What is the largest mammal?",
            "options": ["a) Elephant", "b) Blue Whale", "c) Giraffe", "d) Polar Bear"],
            "answer": "b"
        },
        {
            "question": "In which year did WWII end?",
            "options": ["a) 1943", "b) 1945", "c) 1947", "d) 1950"],
            "answer": "b"
        },
        {
            "question": "Who painted the Mona Lisa?",
            "options": ["a) Van Gogh", "b) Picasso", "c) Da Vinci", "d) Michelangelo"],
            "answer": "c"
        },
        {
            "question": "What is the chemical symbol for gold?",
            "options": ["a) Go", "b) Au", "c) Ag", "d) Gd"],
            "answer": "b"
        },
        {
            "question": "Which country is home to the kangaroo?",
            "options": ["a) Brazil", "b) Australia", "c) South Africa", "d) New Zealand"],
            "answer": "b"
        },
        {
            "question": "How many continents are there?",
            "options": ["a) 5", "b) 6", "c) 7", "d) 8"],
            "answer": "c"
        },
        {
            "question": "What is the largest ocean on Earth?",
            "options": ["a) Atlantic", "b) Indian", "c) Arctic", "d) Pacific"],
            "answer": "d"
        },
        {
            "question": "Which element has the atomic number 1?",
            "options": ["a) Helium", "b) Oxygen", "c) Hydrogen", "d) Carbon"],
            "answer": "c"
        }
    ]
    
    score = 0
    clear_screen()
    print("\n    â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—")
    print("    â•‘          QUIZ STARTED           â•‘")
    print("    â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\n")
    sleep(1)
    
    for i, q in enumerate(questions, 1):
        clear_screen()
        display_question_box(i, q['question'])
        display_options(q['options'])
        
        while True:
            user_answer = input("    Your answer (a-d): ").lower()
            if user_answer in ['a', 'b', 'c', 'd']:
                break
            print("    Invalid input. Please enter a, b, c, or d.")
        
        clear_screen()
        if user_answer == q['answer']:
            print("""
    â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
    â•‘          CORRECT! ğŸ‰            â•‘
    â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
            """)
            score += 1
        else:
            print(f"""
    â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
    â•‘          WRONG! ğŸ˜              â•‘
    â•‘    The correct answer is {q['answer']}      ï¿½
    â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
            """)
        sleep(1.5)
    
    clear_screen()
    print(f"""
    â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
    â•‘         QUIZ COMPLETED           â•‘
    â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£
    â•‘                                  â•‘
    â•‘  Your score: {score}/{len(questions)}              â•‘
    â•‘                                  â•‘
    """)
    
    if score == len(questions):
        print("    â•‘  ğŸ† Perfect! All correct! ğŸ†  â•‘")
    elif score >= len(questions)*0.7:
        print("    â•‘  ğŸ‘ Great job! ğŸ‘          â•‘")
    elif score >= len(questions)/2:
        print("    â•‘  ğŸ˜Š Good effort!           â•‘")
    else:
        print("    â•‘  ğŸ’ª Keep practicing! ğŸ’ª    â•‘")
    
    print("""
    â•‘                                  â•‘
    â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    """)
    input("\n    Press Enter to return to the menu...")

def main():
    clear_screen()
    print("\n    Welcome to the Quiz Program!")
    sleep(1.5)
    
    while True:
        choice = display_menu()
        
        if choice == "1":
            run_quiz()
        elif choice == "2":
            show_instructions()
        elif choice == "3":
            clear_screen()
            print("""
    â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
